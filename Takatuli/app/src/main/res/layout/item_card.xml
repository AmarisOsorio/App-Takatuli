<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    app:cardElevation="4dp"
    app:cardCornerRadius="20dp"
    app:cardUseCompatPadding="true"
    app:contentPadding="15dp"
    app:cardBackgroundColor="#5BD17C"
    android:layout_width="match_parent"
    android:layout_height="120dp"
    tools:context=".item_card">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">


        <ImageView
            android:id="@+id/imgCardH"
            android:layout_width="71dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            tools:srcCompat="@tools:sample/avatars" />


        <TextView
            android:id="@+id/txtNombreHCard"
            android:layout_width="255dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.3"
            android:text="TextView"
            android:textSize="34sp" />

        <ImageView
            android:id="@+id/btnEditH"
            android:layout_width="48dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            tools:srcCompat="@drawable/baseline_edit_24" />

        <ImageView
            android:id="@+id/btnDeleteH"
            android:layout_width="48dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            tools:srcCompat="@drawable/baseline_delete_24" />

    </LinearLayout>

</androidx.cardview.widget.CardView>